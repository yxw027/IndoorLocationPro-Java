<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/viewBackground"
    app:cardCornerRadius="@dimen/dp_1"
    app:cardElevation="@dimen/dp_1">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/dp_3"
        android:layout_toStartOf="@+id/imageView"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ble_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/item_title"
            android:textSize="@dimen/sp_16"
            tools:text="device" />

        <TextView
            android:id="@+id/ble_DeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/item_desc"
            tools:text="DeviceName" />

        <TextView
            android:id="@+id/ble_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/item_desc"
            tools:text="rssi" />

        <TextView
            android:id="@+id/ble_timestampNanos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/item_desc"
            tools:text="timestampNanos" />

        <TextView
            android:id="@+id/ble_describeContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/item_desc"
            tools:text="describeContents" />

